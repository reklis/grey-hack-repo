{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "postgresql@latest",
    "libpq@latest",
    "ruby_3_3@latest",
    "openssl@latest",
    "openssl.dev",
    "libyaml@latest",
    "libyaml.dev",
    "pkg-config@latest",
    "gnumake@latest",
    "gcc@latest"
  ],
  "shell": {
    "init_hook": [
      "export OPENSSL_DIR=$DEVBOX_PACKAGES_DIR",
      "export LIBRARY_PATH=$DEVBOX_PACKAGES_DIR/lib:$LIBRARY_PATH",
      "export C_INCLUDE_PATH=$DEVBOX_PACKAGES_DIR/include:$C_INCLUDE_PATH",
      "export PKG_CONFIG_PATH=$DEVBOX_PACKAGES_DIR/lib/pkgconfig:$PKG_CONFIG_PATH"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
