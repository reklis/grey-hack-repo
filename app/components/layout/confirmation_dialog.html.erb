<% content %>
<%= render(Layout::Modal.new(**@modal_args)) do |c| %>
  <% c.with_button(**@button_args) { @button_content.call } %>
  <% c.with_dialog(size: :medium) do |cc| %>
    <% cc.with_header(small: true) do %>
      <%= title %>
    <% end %>
    <% cc.with_body do %>
      Are you sure?
    <% end %>
    <% cc.with_footer do |ccc| %>
      <% ccc.with_action(close: true) { "Cancel" } %>
      <% ccc.with_action(**@action_args) { @action_content.call } %>
    <% end %>
  <% end %>
<% end %>
